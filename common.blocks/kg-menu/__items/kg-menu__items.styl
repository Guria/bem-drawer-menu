.kg-menu__items
  margin 0px
  padding 0px
  overflow-x hidden
  overflow-y auto
  white-space normal
.kg-menu__item_lvl_top
.kg-menu__item_lvl_top > span
  color inherit
  stroke inherit
  font-family unset
  font-family "Roboto", "Helvetica" ,sans-serif
.kg-menu__items a
.kg-menu__items a:focus
.kg-menu__items a:active
  color inherit
  text-decoration none
  outline none
.kg-menu span
.kg-menu li
.kg-menu a
  font unset
  color unset  
.kg-menu__items_lvl_top
.kg-menu__items_lvl_sub
  list-style-type none
  margin 0
  padding 0
  font-weight 300
  color fnt-color
  stroke fnt-color
.kg-menu__items .menu-item_hovered
  color fnt-color-active
  stroke fnt-color-active
.kg-menu__items_lvl_top
  text-align center
  font-size 0.87rem
.kg-menu__system
  width top-lvl-width
  border-top 1px solid sub-lvl-background
.kg-menu__items_lvl_sub
  position absolute
  height 100%
  top 0px
  left top-lvl-width
  width sub-lvl-width
  display none
  text-align left
  overflow-x hidden
  overflow-y auto
  &.kg-menu__submenu_active
    display block
.kg-menu__item
  cursor pointer
  white-space: normal;
  word-wrap: break-word;
  word-break: normal;
  &_lvl_top
    display block
    position relative
    height top-lvl-height
    width top-lvl-width
    border-bottom 1px solid sub-lvl-background
    &>.kg-menu__icon
      position: absolute;
      bottom: (top-lvl-height / 2)
      left: 0;
      right: 0;
      line-height 24px
      height 24px
      stroke inherit
      stroke-width: 1pt
      background-size contain
      width unset
      padding 0
      &.fa // font-awesome support
        font-size 24px
        &:empty:after
          content none
    &>span
      display flex
      justify-content center
      flex-flow column nowrap
      position: absolute;
      top: (top-lvl-height / 2)
      bottom: 0;
      left: 4px;
      right: 4px;
      overflow: hidden;
      word-break: break-word;
    &.kg-menu__item_active
      background-color top-lvl-background + #111
  &_lvl_sub
    box-sizing border-box
    padding 4px 0 4px 12px
    height sub-lvl-height
    display flex
    flex-flow column nowrap
    justify-content center // vertical-align
    color fnt-color
.kg-menu__version
  padding 4px
.kg-menu__angle-right
  position absolute
  top 0
  right 0
  bottom 0
  width 8px
  stroke inherit
  stroke-width 1pt
  line-height top-lvl-height
  height unset
  padding 0
